<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_design"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/outputText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_text_design"
            android:enabled="true"
            android:fadeScrollbars="true"
            android:gravity="center|start"
            android:maxLines="100"
            android:paddingLeft="2dp"
            android:paddingTop="2dp"
            android:paddingRight="2dp"
            android:paddingBottom="2dp"
            android:scrollbarStyle="insideOverlay"
            android:scrollbars="vertical"
            android:textColor="#000000"
            android:textColorHint="#84FFFF"
            android:textSize="36sp"
            android:verticalScrollbarPosition="right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinnerFunc"
            style="@style/buttonFunctionFont"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:background="@drawable/button_action_design"
            android:dropDownSelector="@drawable/button_action_design"
            android:spinnerMode="dropdown" />

        <Spinner
            android:id="@+id/spinnerTrigo"
            style="@style/buttonFunctionFont"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:background="@drawable/button_action_design"
            android:dropDownSelector="@drawable/button_action_design"
            android:spinnerMode="dropdown" />

        <Button
            android:id="@+id/buttonLeftParentheses"
            style="@style/buttonActionFont"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:background="@drawable/button_action_design"
            android:onClick="onOperandButtonClicked"
            android:text="@string/leftParentheses"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/buttonRightParentheses"
            style="@style/buttonActionFont"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:background="@drawable/button_action_design"
            android:onClick="onOperandButtonClicked"
            android:text="@string/rightParentheses"
            android:textAllCaps="false" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonSquare"
            style="@style/buttonActionFont"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:background="@drawable/button_action_design"
            android:onClick="onFunctionButtonClicked"
            android:text="@string/square"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/buttonSqrt"
            style="@style/buttonActionFont"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:background="@drawable/button_action_design"
            android:onClick="onFunctionButtonClicked"
            android:text="@string/squareRoot"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/buttonFactorial"
            style="@style/buttonActionFont"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:background="@drawable/button_action_design"
            android:onClick="onFunctionButtonClicked"
            android:text="@string/factorial"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/buttonDiv"
            style="@style/buttonActionFont"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:background="@drawable/button_action_design"
            android:onClick="onOperatorButtonClicked"
            android:text="@string/divide"
            android:textAllCaps="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button7"
            style="@style/buttonFont"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:background="@drawable/button_num_design"
            android:fontFamily="cursive"
            android:onClick="onOperandButtonClicked"
            android:text="@string/seven" />

        <Button
            android:id="@+id/button8"
            style="@style/buttonFont"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:background="@drawable/button_num_design"
            android:fontFamily="cursive"
            android:onClick="onOperandButtonClicked"
            android:text="@string/eight" />

        <Button
            android:id="@+id/button9"
            style="@style/buttonFont"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:background="@drawable/button_num_design"
            android:fontFamily="cursive"
            android:onClick="onOperandButtonClicked"
            android:text="@string/nine" />

        <Button
            android:id="@+id/buttonMul"
            style="@style/buttonActionFont"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:background="@drawable/button_action_design"
            android:onClick="onOperatorButtonClicked"
            android:text="@string/multiply"
            android:textAllCaps="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button4"
            style="@style/buttonFont"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:background="@drawable/button_num_design"
            android:fontFamily="cursive"
            android:onClick="onOperandButtonClicked"
            android:text="@string/four" />

        <Button
            android:id="@+id/button5"
            style="@style/buttonFont"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:background="@drawable/button_num_design"
            android:fontFamily="cursive"
            android:onClick="onOperandButtonClicked"
            android:text="@string/five" />

        <Button
            android:id="@+id/button6"
            style="@style/buttonFont"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:background="@drawable/button_num_design"
            android:fontFamily="cursive"
            android:onClick="onOperandButtonClicked"
            android:text="@string/six" />

        <Button
            android:id="@+id/buttonMinus"
            style="@style/buttonActionFont"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:background="@drawable/button_action_design"
            android:onClick="onOperatorButtonClicked"
            android:text="@string/minus"
            android:textAllCaps="false" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button1"
            style="@style/buttonFont"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:background="@drawable/button_num_design"
            android:onClick="onOperandButtonClicked"
            android:text="@string/one" />

        <Button
            android:id="@+id/button2"
            style="@style/buttonFont"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:background="@drawable/button_num_design"
            android:longClickable="true"
            android:onClick="onOperandButtonClicked"
            android:text="@string/two" />

        <Button
            android:id="@+id/button3"
            style="@style/buttonFont"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:background="@drawable/button_num_design"
            android:longClickable="true"
            android:onClick="onOperandButtonClicked"
            android:text="@string/three" />

        <Button
            android:id="@+id/buttonPlus"
            style="@style/buttonActionFont"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:background="@drawable/button_action_design"
            android:onClick="onOperatorButtonClicked"
            android:text="@string/plus"
            android:textAllCaps="false" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonClear"
            style="@style/buttonFont"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:background="@drawable/button_action_design"
            android:fontFamily="cursive"
            android:onClick="onClearButtonClicked"
            android:text="@string/clrscr" />

        <Button
            android:id="@+id/button0"
            style="@style/buttonFont"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:background="@drawable/button_num_design"
            android:fontFamily="cursive"
            android:onClick="onOperandButtonClicked"
            android:text="@string/zero" />

        <Button
            android:id="@+id/buttonDot"
            style="@style/buttonActionFont"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:background="@drawable/button_num_design"
            android:onClick="onOperandButtonClicked"
            android:text="@string/dot"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/buttonEquals"
            style="@style/buttonActionFont"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:background="@drawable/button_action_design"
            android:onClick="onEqualsButtonClicked"
            android:text="@string/equals"
            android:textAllCaps="false" />

    </LinearLayout>
</LinearLayout>