<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TexasHoldem" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. (Selection color in navigation) -->
        <item name="colorPrimary">@android:color/holo_blue_dark</item>
        <item name="colorPrimaryVariant">@android:color/holo_blue_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. (ProgressBar color) -->
        <item name="colorSecondary">@android:color/holo_green_dark</item>
        <item name="colorSecondaryVariant">@android:color/holo_green_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <item name="android:alertDialogTheme">@style/AlertDialogTheme.Light</item>
    </style>

    <!-- Play on full screen. No action bar and no title -->
    <style name="Theme.TexasHoldem.NoActionBar" parent="Theme.TexasHoldem">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Set custom style to alert dialog. We use it when user clicks the "buyCoins" button at nav_header_main.xml -->
    <style name="AlertDialogTheme.Light" parent="ThemeOverlay.MaterialComponents.Dialog.Alert" >
        <item name="buttonBarStyle">@style/Widget.AppCompat.ButtonBar</item>
        <item name="buttonBarPositiveButtonStyle">@style/ButtonGreenNoBorderStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/ButtonRedNoBorderStyle</item>
    </style>
</resources>
