<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TexasHoldem" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_blue_900</item>
        <item name="colorPrimaryVariant">@color/light_blue_600</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
    </style>

    <!-- Play on full screen. No action bar and no title -->
    <style name="Theme.TexasHoldem.NoActionBar" parent="Theme.TexasHoldem">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ButtonStyle" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonGreenStyle" parent="ButtonStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/button_green</item>
    </style>

    <style name="ButtonBlueStyle" parent="ButtonStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@drawable/button_blue</item>
    </style>

    <style name="ButtonRedStyle" parent="ButtonStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@drawable/button_red</item>
    </style>

    <style name="ButtonYellowStyle" parent="ButtonStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@drawable/button_yellow</item>
    </style>
</resources>