<resources>
    <style name="ButtonStyle" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHighlight">@color/white</item> <!-- Must use or it will fail at TextView.readTextAppearance -> TypedArray.getColor:528 -->
        <item name="android:textColorHint">@color/white</item> <!-- Must use or it will fail at TextView.readTextAppearance -> TypedArray.getColor:528 -->
        <item name="android:textColorLink">@color/white</item> <!-- Must use or it will fail at TextView.readTextAppearance -> TypedArray.getColor:528 -->
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonGreenStyle" parent="ButtonStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/button_green</item>
    </style>

    <style name="ButtonGreenNoBorderStyle" parent="ButtonStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/button_green_no_border</item>
    </style>

    <style name="ButtonGreenRightStyle" parent="ButtonStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/button_dark_gray_right</item>
    </style>

    <style name="ButtonBlueStyle" parent="ButtonStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@drawable/button_blue</item>
    </style>

    <style name="ButtonBlueNoBorderStyle" parent="ButtonStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@drawable/button_blue_no_border</item>
    </style>

    <style name="ButtonRedStyle" parent="ButtonStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@drawable/button_red</item>
    </style>

    <style name="ButtonRedNoBorderStyle" parent="ButtonStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/button_red_no_border</item>
    </style>

    <style name="ButtonYellowStyle" parent="ButtonStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@drawable/button_yellow</item>
    </style>

    <style name="ButtonYellowLeftStyle" parent="ButtonStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@drawable/button_dark_gray_left</item>
    </style>

    <style name="EditTextStyle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/white</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/edit_text_tint_color</item>
    </style>

    <style name="EditTextGreenStyle" parent="EditTextStyle">
        <item name="android:backgroundTint">@color/background_tint_colors</item>
        <item name="android:drawableTint">@color/background_tint_colors</item>
    </style>

    <style name="EditTextBlueStyle" parent="EditTextStyle">
        <item name="android:textColor">@color/edit_text_tint_focused_blue_color</item>
        <item name="android:backgroundTint">@color/background_tint_colors_blue</item>
        <item name="android:drawableTint">@color/background_tint_colors_blue</item>
    </style>

    <style name="SpinnerDatePickerStyle" parent="android:Theme.Holo.Panel">
        <item name="android:datePickerStyle">@style/SpinnerDatePicker</item>
    </style>

    <style name="SpinnerDatePicker" parent="android:Widget.Holo.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>
</resources>