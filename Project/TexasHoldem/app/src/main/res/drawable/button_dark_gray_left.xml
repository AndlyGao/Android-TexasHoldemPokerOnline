<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <inset android:insetLeft="-10dp">
            <shape android:shape="rectangle">
                <solid android:color="@color/dark_gray"/>
                <corners android:radius="6dp" />
                <stroke android:width="1dp" android:color="@color/gray_button_stroke" />
            </shape>
        </inset>
    </item>
    <item android:state_enabled="false">
        <inset android:insetLeft="-10dp">
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:centerColor="@color/gray_button_center_color" android:endColor="@color/gray_button_end_color" android:startColor="@color/gray_button_start_color" />
            <corners android:radius="6dp" />
            <stroke android:width="2dp" android:color="@color/gray_button_stroke" />
        </shape>
        </inset>
    </item>
</selector>