<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <gradient android:centerColor="@color/green_button_center_color" android:endColor="@color/green_button_end_color" android:gradientRadius="50dp" android:startColor="@color/green_button_start_color" android:type="radial" />
            <corners android:radius="6dp" />
            <stroke android:width="2dp" android:color="@color/green_button_stroke" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <gradient android:centerColor="@color/gray_button_center_color" android:endColor="@color/gray_button_end_color" android:gradientRadius="50dp" android:startColor="@color/gray_button_start_color" android:type="radial" />
            <corners android:radius="6dp" />
            <stroke android:width="2dp" android:color="@color/gray_button_stroke" />
        </shape>
    </item>
</selector>